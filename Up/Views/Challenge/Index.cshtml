@{
    ViewData["Title"] = "Challenges";
    Layout = "~/Views/Shared/_LayoutChallenge.cshtml"; ;
}

<div id="ChallengeIndex">
    <v-app style="background: transparent">
        <div class="center" v-if="hocVien == ''">
            <h1 class="h1 mb-5 font-weight-normal">{{ title }}</h1>
            <v-text-field label="Enter your ID" required v-model="trigram" style="width: 50%" v-on:keyup.enter="onSubmitTrigram(trigram)"></v-text-field>
            <v-btn color="blue darken-1 white--text" v-on:click="onSubmitTrigram(trigram)">Submit</v-btn>
        </div>

        <div v-else class="center">
            <h5 class="mt-5">Welcome <b>{{ hocVien.fullName }}</b> to the challenge system of UP English.</h5>

            <h5 class="mt-5">We wish you a wonderful result.</h5>

            <h5 class="mt-3">Please choose the challenge you want to take.</h5>

            <v-select :items="thuThachItems"
                      item-text="name"
                      item-value="thuThachId"
                      v-model="selectedThuThach"
                      return-object
                      label="Select Challenge *"
                      style="width: 50%">
            </v-select>

            <div v-if="selectedThuThach != ''">
                <h5>{{ selectedThuThach.name }} has <b>{{ selectedThuThach.soCauHoi }}</b> questions.</h5>

                <h5>You have <b>{{ selectedThuThach.thoiGianLamBai }}</b> mins to finish it. And you need <b>{{ selectedThuThach.minGrade }}/{{ selectedThuThach.soCauHoi }}</b> to pass.</h5>

                <h5>Good luck</h5>

                <img src="~/img/wink-emoji.png" class="img-thumbnail"/>

                <v-btn color="blue darken-1 white--text">Start</v-btn>
            </div>
        </div>

        <v-snackbar v-model="snackbar"
                    :color="color"
                    :timeout="timeout"
                    top
                    right>
            {{ messageText }}
            <v-btn dark
                   flat
                   v-on:click="snackbar = false">
                Close
            </v-btn>
        </v-snackbar>
    </v-app>
</div>

<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="~/js/challengeindex.js" type="text/javascript"></script>

<style>
    .v-input__slot:before, .v-input__slot:after {
        display: none
    }

    .center {
        text-align: -webkit-center;
    }
</style>