<div id="KetQuaIndex">
    <v-app>
        <div class="container">
            <div class="col s10 m6 l6">
                <h5 class="breadcrumbs-title">{{ title }}</h5>
            </div>

            <v-card>
                <v-card-title>
                    <v-layout wrap>
                        @if (ViewBag.CanContribute)
                        {
                            <partial name="_KetQuaDropdownList" />
                        }

                        <v-container fluid v-if="hocVienItems.length > 0">
                            <v-text-field v-model="search"
                                          append-icon="search"
                                          label="Tìm Kiếm"
                                          single-line
                                          hide-details></v-text-field>
                            <v-layout wrap>
                                <v-flex>
                                    <partial name="_KetQuaDataTable" />
                                </v-flex>
                            </v-layout>
                        </v-container>
                    </v-layout>    
                </v-card-title>
            </v-card>
        </div>
    </v-app>
</div>

<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="~/js/ketquaindex.min.js" type="text/javascript"></script>

<style>
    .v-input__slot:before, .v-input__slot:after {
        display: none
    }

    .v-small-dialog a {
        text-decoration-style: dashed;
        text-decoration-line: underline;
        text-decoration-color: #0088cc;
    }
</style>