<div id="ExportThuThachIndex">
    <v-app>
        <div class="container">
            <div class="col s10 m6 l6">
                <h5 class="breadcrumbs-title">{{ title }}</h5>
            </div>

            <v-card>
                <v-card-title>
                    <v-layout wrap>
                        <v-flex xs12 sm8>
                            <v-select v-model="selectedThuThach"
                                      :items="itemThuThach"
                                      item-text="name"
                                      item-value="thuThachId"
                                      return-object
                                      chips
                                      label="Chọn Thử Thách">
                                <template v-slot:selection="data">
                                    <v-chip :selected="data.selected"
                                            color="green"
                                            text-color="white">
                                        <span>{{ data.item.name }}</span>
                                    </v-chip>
                                </template>
                            </v-select>
                        </v-flex>

                        <v-spacer></v-spacer>
                        <v-flex xs12 sm4>
                            <v-btn color="success" v-on:click="onExport">Xuất Excel</v-btn>
                        </v-flex>
            </v-card>
        </div>

        <partial name="_Toast" />
    </v-app>
</div>

<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="~/js/exportthuthachindex.min.js" type="text/javascript"></script>

<style>
    .v-input__slot:before, .v-input__slot:after {
        display: none
    }

    .v-small-dialog a {
        text-decoration-style: dashed;
        text-decoration-line: underline;
        text-decoration-color: #0088cc;
    }

    td, th {
        padding: unset;
