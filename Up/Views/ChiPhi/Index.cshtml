<div id="ChiPhiIndex">
    <v-app>
        <div class="container">
            <div class="col s10 m6 l6">
                <h5 class="breadcrumbs-title">{{ title }}</h5>
            </div>

            <v-card>
                <v-card-title>
                    <v-layout wrap>

                        <v-flex xs12 sm2>
                            <v-select :items="itemThang"
                                      v-model="selectedThang"
                                      chips
                                      label="Chọn Tháng"></v-select>
                        </v-flex>

                        <v-flex xs12 sm2>
                            <v-select :items="itemNam"
                                      v-model="selectedNam"
                                      chips
                                      label="Chọn Năm"></v-select>
                        </v-flex>

                        <v-flex xs12 sm2>
                            <v-btn color="success" v-on:click="onTinhTien">Tính Chi Phí</v-btn>
                        </v-flex>
                        @*<div v-if="hocVienList.length > 0">
                                Số ngày học tháng trước:
                                <span style="color:red">{{tongNgayHoc}}</span>

                                - Số ngày được nghỉ:
                                <span style="color:red">
                                    {{tongNgayDuocNghi}}
                                </span>

                                - Học phí:
                                <span style="color:red">
                                    {{formatNumber(tongHocPhi)}}
                                </span>

                                - Học phí mỗi ngày:
                                <span style="color:red">{{formatNumber(hocPhiMoiNgay)}}</span>
                            </div>*@


                        <v-container fluid v-if="chiPhiList.length > 0">
                            <v-layout wrap>
                                <v-flex>
                                    <v-data-table :headers="headers"
                                                  :items="chiPhiList">
                                        <template slot="items" slot-scope="props">

                                            <td>
                                                {{ props.item.name }}
                                            </td>
                                            <td>{{ formatNumber(props.item.salary_Expense) }}</td>
                                            <td>
                                                <span v-if="props.item.loaiChiPhi == 1">{{ props.item.teachingRate }}</span>
                                            </td>
                                            <td>
                                                <span v-if="props.item.loaiChiPhi == 1">{{ props.item.tutoringRate }}</span>
                                            </td>
                                            <td>
                                                <span v-if="props.item.loaiChiPhi == 1"><v-text-field v-on:keyup="onTinhChiPhi(props.item)" label="Số Giờ Dạy" v-model="props.item.soGioDay" :value="props.item.soGioDay"></v-text-field></span>
                                            </td>
                                            <td>
                                                <span v-if="props.item.loaiChiPhi == 1"><v-text-field v-on:keyup="onTinhChiPhi(props.item)" label="Số Giờ Kèm" v-model="props.item.soGioKem" :value="props.item.soGioKem"></v-text-field></span>
                                            </td>
                                            <td><v-text-field label="Bonus" v-on:keyup="onTinhChiPhi(props.item)" v-model="props.item.bonus" :value="props.item.bonus"></v-text-field></td>
                                            <td><v-text-field label="Chi Phí" v-model="props.item.chiPhiMoi" :value="props.item.chiPhiMoi"></v-text-field></td>
                                            <td>
                                                <v-tooltip top>
                                                    <template v-slot:activator="{ on }">
                                                        <v-btn flat icon
                                                               color="success"
                                                               v-on="on"
                                                               v-on:click="onLuu(props.item)">
                                                            <v-icon>check</v-icon>
                                                        </v-btn>
                                                    </template>
                                                    <strong>Đóng tiền và Lưu</strong>
                                                </v-tooltip>

                                                <v-tooltip top>
                                                    <template v-slot:activator="{ on }">
                                                        <v-btn flat icon
                                                               color="warning"
                                                               v-on="on"
                                                               v-on:click="onNo(props.item)">
                                                            <v-icon>restore</v-icon>
                                                        </v-btn>
                                                    </template>
                                                    <strong>Nợ và Lưu</strong>
                                                </v-tooltip>
                                            </td>

                                        </template>
                                        <v-alert slot="no-results" :value="true" color="error" icon="warning">
                                            Không tìm thấy "{{ search }}".
                                        </v-alert>
                                    </v-data-table>
                                </v-flex>
                            </v-layout>
                        </v-container>

            </v-card>
        </div>

        <v-snackbar v-model="snackbar"
                    :color="color"
                    :timeout="timeout"
                    top
                    right>
            {{ messageText }}
            <v-btn dark
                   flat
                   v-on:click="snackbar = false">
                Close
            </v-btn>
        </v-snackbar>
    </v-app>
</div>

<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="~/js/tinhchiphiindex.js" type="text/javascript"></script>

<style>
    .v-input__slot:before, .v-input__slot:after {
        display: none
    }

    .v-small-dialog a {
        text-decoration-style: dashed;
        text-decoration-line: underline;
        text-decoration-color: #0088cc;
    }

    td, th {
        padding: unset;
    }
</style>