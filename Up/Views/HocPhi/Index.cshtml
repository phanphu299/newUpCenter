<div id="HocPhiIndex">
    <v-app>
        <div class="container">
            <div class="col s10 m6 l6">
                <h5 class="breadcrumbs-title">{{ title }}</h5>
            </div>

            <v-card>
                <v-card-title>
                    <v-layout wrap>
                        <v-flex xs12 sm3>
                            <v-select v-model="selectedLopHoc"
                                      :items="itemLopHoc"
                                      item-text="name"
                                      attach
                                      return-object
                                      chips
                                      label="Chọn Lớp Học"
                                      v-on:change="onTinhTien">
                                <template v-slot:selection="data">
                                    <v-chip :selected="data.selected"
                                            color="green"
                                            text-color="white">
                                        <span>{{ data.item.name }}</span>
                                    </v-chip>
                                </template>
                            </v-select>
                        </v-flex>

                        <v-flex xs12 sm3>
                            <v-select :items="itemThang"
                                      v-model="selectedThang"
                                      chips
                                      label="Chọn Tháng"
                                      v-on:change="onTinhTien"></v-select>
                        </v-flex>

                        <v-flex xs12 sm3>
                            <v-select :items="itemNam"
                                      v-model="selectedNam"
                                      chips
                                      label="Chọn Năm"
                                      v-on:change="onTinhTien"></v-select>
                        </v-flex>

                        <v-flex xs12 sm3>
                            <v-select :items="itemHocPhi"
                                      v-model="selectedHocPhi"
                                      item-text="gia"
                                      return-object
                                      chips
                                      label="Chọn Học Phí"
                                      v-on:change="onTinhTien"></v-select>
                        </v-flex>

                        <v-flex xs12 sm2>
                            <v-btn color="primary" v-on:click="onTinhTien" v-if="selectedNam !== '' && selectedThang !== '' && selectedHocPhi !== ''">Refresh</v-btn>
                        </v-flex>

                        @if (ViewBag.CanContribute)
                        {
                            <v-flex xs12 sm2 v-if="hocVienList.length > 0">
                                <v-btn color="success" v-on:click="onExport">Xuất Excel</v-btn>
                            </v-flex>
                        }

                        <div v-if="hocVienList.length > 0">
                            Số ngày học tháng này:
                            <span style="color:red">{{tongNgayHoc}}</span>

                            @*- Số ngày được nghỉ:
                            <span style="color:red">
                                {{tongNgayDuocNghi}}
                            </span>*@

                            - Học phí:
                            <span style="color:red">
                                {{formatNumber(tongHocPhi)}}
                            </span>

                            - Học phí mỗi ngày:
                            <span style="color:red">{{formatNumber(hocPhiMoiNgay)}}</span>
                        </div>

                        <v-container fluid v-if="hocVienList.length > 0">
                            <v-text-field v-model="search"
                                          append-icon="search"
                                          label="Tìm Kiếm"
                                          single-line
                                          hide-details></v-text-field>
                            <v-layout wrap>
                                <v-flex>
                                    <v-data-table :headers="headers"
                                                  :search="search"
                                                  :items="hocVienList">
                                        <template slot="items" slot-scope="props">
                                            <td>{{ props.item.stt }}</td>
                                            <td>
                                                {{ props.item.fullName }} <br />
                                                <v-tooltip top v-if="props.item.hocPhiBuHocVienVaoSau > 0">
                                                    <template v-slot:activator="{ on }">
                                                        <v-icon color="error lighten-1" dark v-on="on">info</v-icon>
                                                    </template>
                                                    Ngày vào học: <strong>{{ props.item.ngayBatDauHoc }}</strong><br />
                                                    Trừ học phí: <strong>{{ formatNumber(props.item.hocPhiBuHocVienVaoSau) }}</strong>
                                                </v-tooltip>
                                                <v-icon v-if="props.item.daDongHocPhi" color="success">check_circle_outline</v-icon>
                                                <v-tooltip top v-if="props.item.daNo">
                                                    <template v-slot:activator="{ on }">
                                                        <v-icon color="warning lighten-1" dark v-on="on">move_to_inbox</v-icon>
                                                    </template>
                                                    Dời qua tháng sau
                                                </v-tooltip>
                                                <v-tooltip top v-if="props.item.tronGoi">
                                                    <template v-slot:activator="{ on }">
                                                        <v-icon color="success lighten-1" dark v-on="on">star_rate</v-icon>
                                                    </template>
                                                    Đã đóng trọn gói
                                                </v-tooltip>
                                            </td>
                                            <td><span style="color: red">{{ formatNumber(props.item.hocPhiMoi) }}</span></td>
                                            <td>{{ formatNumber(props.item.tienNo) }}</td>
                                            <td>
                                                <v-select :items="itemSach"
                                                          item-text="name"
                                                          multiple
                                                          chips
                                                          :disabled="props.item.tronGoi && props.item.hocPhiMoi == 0"
                                                          return-object
                                                          label="Chọn Tài Liệu"
                                                          item-disabled="isDisabled"
                                                          v-model="props.item.giaSach"
                                                          v-on:change="onchangeSach(props.item.giaSach, props.item)">
                                                    <template v-slot:selection="data">
                                                        <v-chip :selected="data.selected"
                                                                color="green"
                                                                text-color="white">
                                                            <strong>{{ data.item.name }}</strong>&nbsp;
                                                            <span>({{ formatNumber(data.item.gia) }})</span>
                                                        </v-chip>
                                                    </template>
                                                </v-select>
                                            </td>
                                            <td>
                                                <v-select :items="itemKhuyenMai"
                                                          v-model="props.item.khuyenMai"
                                                          chips
                                                          clearable
                                                          :disabled="props.item.tronGoi && props.item.hocPhiMoi == 0"
                                                          label="Khuyến Mãi (%)"
                                                          v-on:change="onchangeKhuyenMai(props.item.khuyenMai, props.item)">
                                                </v-select>
                                            </td>
                                            <td><v-text-field :disabled="props.item.tronGoi && props.item.hocPhiMoi == 0" v-model="props.item.bonus" v-on:keyup="onBonusHocPhi(props.item.bonus, props.item)"></v-text-field></td>
                                            <td><v-text-field :disabled="props.item.tronGoi && props.item.hocPhiMoi == 0" v-model="props.item.minus" v-on:keyup="onMinusHocPhi(props.item.minus, props.item)"></v-text-field></td>
                                            <td><v-text-field :disabled="props.item.tronGoi && props.item.hocPhiMoi == 0" v-model="props.item.ghiChu"></v-text-field></td>
                                            <td>
                                                @if (ViewBag.CanContribute)
                                                {
                                                    <v-tooltip top>
                                                        <template v-slot:activator="{ on }">
                                                            <v-btn flat icon
                                                                   small
                                                                   color="success"
                                                                   v-on="on"
                                                                   v-on:click="onLuu(props.item)">
                                                                <v-icon>check</v-icon>
                                                            </v-btn>
                                                        </template>
                                                        <strong>Đóng tiền và Lưu</strong>
                                                    </v-tooltip>

                                                    <v-tooltip top>
                                                        <template v-slot:activator="{ on }">
                                                            <v-btn flat icon
                                                                   small
                                                                   color="warning"
                                                                   v-on="on"
                                                                   v-on:click="onNo(props.item)">
                                                                <v-icon>move_to_inbox</v-icon>
                                                            </v-btn>
                                                        </template>
                                                        <strong>Nợ và Lưu</strong>
                                                    </v-tooltip>

                                                    <v-tooltip top>
                                                        <template v-slot:activator="{ on }">
                                                            <v-btn flat icon
                                                                   small
                                                                   color="error"
                                                                   v-on="on"
                                                                   v-on:click="onUndo(props.item)">
                                                                <v-icon>restore</v-icon>
                                                            </v-btn>
                                                        </template>
                                                        <strong>Undo</strong>
                                                    </v-tooltip>
                                                }
                                            </td>

                                        </template>
                                    </v-data-table>
                                    <span><b>Tổng Học Phí: {{ formatNumber(total) }}</b></span>
                                    <v-layout>
                                        <v-spacer></v-spacer>
                                        @if (ViewBag.CanContribute)
                                        {
                                            <v-flex xs12 sm2 v-if="hocVienList.length > 0">
                                                <v-btn color="primary" v-on:click="onLuuNhap">Lưu Bảng Tính</v-btn>
                                            </v-flex>
                                        }

                                    </v-layout>
                                </v-flex>
                            </v-layout>
                        </v-container>

</v-card>
        </div>

        <v-snackbar v-model="snackbar"
                    :color="color"
                    :timeout="timeout"
                    top
                    right>
            {{ messageText }}
            <v-btn dark
                   flat
                   v-on:click="snackbar = false">
                Close
            </v-btn>
        </v-snackbar>
    </v-app>
</div>

<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="~/js/tinhhocphiindex.min.js" type="text/javascript"></script>

<style>
    .v-input__slot:before, .v-input__slot:after {
        display: none
    }

    .v-small-dialog a {
        text-decoration-style: dashed;
        text-decoration-line: underline;
        text-decoration-color: #0088cc;
    }

    td, th {
        padding: unset;
    }

    .red-header {
        color: red !important
    }
</style>