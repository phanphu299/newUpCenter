<div id="HocPhiIndex">
    <v-app>
        <div class="container">
            <div class="col s10 m6 l6">
                <h5 class="breadcrumbs-title">{{ title }}</h5>
            </div>

            <v-card>
                <v-card-title>
                    <v-layout wrap>
                        <partial name="_HPActionItems" />

                        <v-container fluid v-if="hocVienList.length > 0">
                            <v-text-field v-model="search"
                                          append-icon="search"
                                          label="Tìm Kiếm"
                                          single-line
                                          hide-details></v-text-field>
                            <v-layout wrap>
                                <v-flex>
                                    <partial name="_HPDataTable" />
                                    <span><b>Tổng Học Phí: {{ formatNumber(total) }}</b></span>
                                    <v-layout>
                                        <v-spacer></v-spacer>
                                        @if (ViewBag.CanContribute)
                                        {
                                            <v-flex xs12 sm2 v-if="hocVienList.length > 0">
                                                <v-btn color="primary" v-on:click="onLuuNhap">Lưu Bảng Tính</v-btn>
                                            </v-flex>
                                        }
                                    </v-layout>
                                </v-flex>
                            </v-layout>
                        </v-container>
                    </v-layout>
            </v-card>
        </div>

        <partial name="_Toast" />
    </v-app>
</div>

<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="~/js/tinhhocphiindex.min.js" type="text/javascript"></script>

<style>
    .v-input__slot:before, .v-input__slot:after {
        display: none
    }

    .v-small-dialog a {
        text-decoration-style: dashed;
        text-decoration-line: underline;
        text-decoration-color: #0088cc;
    }

    td, th {
        padding: unset;
    }

    .red-header {
        color: red !important
    }
</style>