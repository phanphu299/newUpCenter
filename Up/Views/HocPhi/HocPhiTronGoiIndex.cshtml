<div id="HocPhiTronGoiIndex">
    <v-app>
        <div class="container">
            <div class="col s10 m6 l6">
                <h5 class="breadcrumbs-title">{{ title }}</h5>
            </div>

            <v-card>
                <v-card-title>
                    @if (ViewBag.CanContribute)
                    {
                        <v-dialog v-model="dialog" persistent max-width="900px">
                            <v-btn color="primary"
                                   slot="activator"
                                   class="white--text">
                                Thêm Mới
                                <v-icon right dark>add</v-icon>
                            </v-btn>
                            <v-card>
                                <v-card-title>
                                    <span class="headline">Thêm Học Viên Đóng Trọn Gói Mới</span>
                                </v-card-title>
                                <v-card-text>
                                    <v-container grid-list-md>
                                        <v-layout wrap>
                                            <v-flex xs12>
                                                <v-autocomplete v-model="newItem.hocVien"
                                                                :loading="loadingHocVien"
                                                                :items="itemsHocVien"
                                                                :search-input.sync="searchHocVien"
                                                                cache-items
                                                                class="mx-3"
                                                                flat
                                                                return-object
                                                                hide-no-data
                                                                hide-details
                                                                label="Chọn học viên"
                                                                item-text="fullName"
                                                                item-value="hocVienId"
                                                                solo
                                                                chips
                                                                v-on:change="onChangeHocVien">
                                                    <template v-slot:selection="data">
                                                        <v-chip :selected="data.selected"
                                                                color="green"
                                                                text-color="white">
                                                            <span>{{ data.item.fullName }}</span>

                                                        </v-chip>
                                                    </template>
                                                    <template v-slot:item="data">
                                                        <template>
                                                            <v-list-tile-content v-text="data.item.fullName"></v-list-tile-content>
                                                            <v-list-tile-content v-text="data.item.phone"></v-list-tile-content>
                                                        </template>
                                                    </template>
                                                </v-autocomplete>

                                                <v-text-field :rules='rules' prefix="VNĐ" label="Giá *" required v-model="newItem.hocPhi" v-on:keyup.enter="onSave"></v-text-field>
                                            </v-flex>
                                            <v-flex xs12>
                                                <v-menu v-model="isShowDatePicker"
                                                        :close-on-content-click="false"
                                                        :nudge-right="40"
                                                        lazy
                                                        transition="scale-transition"
                                                        offset-y
                                                        full-width
                                                        min-width="290px">
                                                    <v-text-field slot="activator"
                                                                  v-model="newItem.fromDate"
                                                                  label="Từ Ngày"
                                                                  prepend-icon="event"
                                                                  readonly></v-text-field>
                                                    <v-date-picker locale="vi-vn" v-model="newItem.fromDate" v-on:input="isShowDatePicker = false"></v-date-picker>
                                            </v-flex>
                                            <v-flex xs12>
                                                <v-menu v-model="isShowDatePicker2"
                                                        :close-on-content-click="false"
                                                        :nudge-right="40"
                                                        lazy
                                                        transition="scale-transition"
                                                        offset-y
                                                        full-width
                                                        min-width="290px">
                                                    <v-text-field slot="activator"
                                                                  v-model="newItem.toDate"
                                                                  label="Đến Ngày"
                                                                  prepend-icon="event"
                                                                  readonly></v-text-field>
                                                    <v-date-picker locale="vi-vn" v-model="newItem.toDate" v-on:input="isShowDatePicker2 = false"></v-date-picker>
                                            </v-flex>

                                            <v-flex xs12 sm3>
                                                <v-select v-model="newItem.lopHoc"
                                                          :items="itemLopHoc"
                                                          item-text="name"
                                                          return-object
                                                          chips
                                                          label="Chọn Lớp Học">
                                                    <template v-slot:selection="data">
                                                        <v-chip :selected="data.selected"
                                                                color="green"
                                                                text-color="white">
                                                            <span>{{ data.item.name }}</span>

                                                        </v-chip>
                                                    </template>
                                                </v-select>
                                            </v-flex>

                                            <v-flex xs12 sm3>
                                                <v-menu v-model="isShowDatePickerLopHoc"
                                                        :close-on-content-click="false"
                                                        :nudge-right="40"
                                                        lazy
                                                        transition="scale-transition"
                                                        offset-y
                                                        full-width
                                                        min-width="290px">
                                                    <v-text-field slot="activator"
                                                                  v-model="newItem.fromDateLopHoc"
                                                                  label="Từ Ngày"
                                                                  prepend-icon="event"
                                                                  readonly></v-text-field>
                                                    <v-date-picker locale="vi-vn" v-model="newItem.fromDateLopHoc" v-on:input="isShowDatePickerLopHoc = false"></v-date-picker>
                                            </v-flex>
                                            <v-flex xs12 sm3>
                                                <v-menu v-model="isShowDatePickerLopHoc2"
                                                        :close-on-content-click="false"
                                                        :nudge-right="40"
                                                        lazy
                                                        transition="scale-transition"
                                                        offset-y
                                                        full-width
                                                        min-width="290px">
                                                    <v-text-field slot="activator"
                                                                  v-model="newItem.toDateLopHoc"
                                                                  label="Đến Ngày"
                                                                  prepend-icon="event"
                                                                  readonly></v-text-field>
                                                    <v-date-picker locale="vi-vn" v-model="newItem.toDateLopHoc" v-on:input="isShowDatePickerLopHoc2 = false"></v-date-picker>
                                            </v-flex>

                                            <v-flex xs12 sm3>
                                                <v-tooltip top>
                                                    <template v-slot:activator="{ on }">
                                                        <v-btn slot="activator" v-on="on" color="primary darken-1" small v-on:click="onAddLopHoc" >Thêm</v-btn>
                                                    </template>
                                                    <strong>Thêm Lớp Học</strong>
                                                </v-tooltip>
                                            </v-flex>

                                            <v-flex xs12 sm12>
                                                <table class="table table-condensed table-hover table-bordered" style="border: 1px solid #ddd;">
                                                    <thead style="background-color: orange;">
                                                        <tr style="border: 1px solid #ddd;">
                                                            <th style="border: 1px solid #ddd;text-align:center"> Lớp Học</th>
                                                            <th style="border: 1px solid #ddd;text-align:center"> Từ Ngày</th>
                                                            <th style="border: 1px solid #ddd;text-align:center"> Đến Ngày</th>
                                                            <th style="border: 1px solid #ddd;text-align:center"> Xóa</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <tr style="border: 1px solid #ddd;" v-for="(item,i) in arrayLopHoc" :key="i">
                                                            <td style="border: 1px solid #ddd; vertical-align: middle; padding-right:5px; padding-top: 0px; padding-bottom: 0px; text-align:center">{{ item.lopHoc.name }}</td>
                                                            <td style="border: 1px solid #ddd; vertical-align: middle; padding-right:5px; padding-top: 0px; padding-bottom: 0px; text-align:center">{{ item.fromDate }}</td>
                                                            <td style="border: 1px solid #ddd; vertical-align: middle; padding-right:5px; padding-top: 0px; padding-bottom: 0px; text-align:center">{{ item.toDate }}</td>
                                                            <td style="border: 1px solid #ddd; vertical-align: middle; padding-right:5px; padding-top: 0px; padding-bottom: 0px; text-align:center">
                                                                <v-tooltip top>
                                                                    <template v-slot:activator="{ on }">
                                                                        <v-btn slot="activator" v-on="on" color="error darken-1" fab small flat v-on:click="onXoaLopHoc(item)"><v-icon>delete</v-icon></v-btn>
                                                                    </template>
                                                                    <strong>Xóa Lớp Học</strong>
                                                                </v-tooltip>
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </v-flex>

                                        </v-layout>
                                    </v-container>
                                    <small>* bắt buộc</small>
                                    <v-alert v-model="alert"
                                             dismissible
                                             color="warning"
                                             icon="priority_high"
                                             outline>
                                        {{ alertMessage }}
                                    </v-alert>
                                </v-card-text>
                                <v-card-actions>
                                    <v-spacer></v-spacer>
                                    <v-btn color="secondary darken-1" flat v-on:click="dialog = false; alert = false; itemLopHoc = []; arrayLopHoc = []">Đóng</v-btn>
                                    <v-btn color="blue darken-1 white--text" v-on:click="onSave">Lưu</v-btn>
                                </v-card-actions>
                            </v-card>
                        </v-dialog>
                    }

                    <v-spacer></v-spacer>
                    <v-text-field v-model="search"
                                  append-icon="search"
                                  label="Tìm Kiếm"
                                  single-line
                                  hide-details></v-text-field>
                </v-card-title>
                <v-data-table :headers="headers"
                              :items="khoaHocItems"
                              :search="search">
                    <template slot="items" slot-scope="props">
                        <td>
                            @if (ViewBag.CanContribute)
                            {
                                <v-tooltip top>
                                    <template v-slot:activator="{ on }">
                                        <v-btn flat icon
                                               color="primary"
                                               v-on="on"
                                               v-on:click.stop="dialogEdit = true"
                                               v-on:click="mappingEditItem(props.item)">
                                            <v-icon>edit</v-icon>
                                        </v-btn>
                                    </template>
                                    <strong>Sửa</strong>
                                </v-tooltip>

                                <v-tooltip top>
                                    <template v-slot:activator="{ on }">
                                        <v-btn flat icon slot="activator"
                                               v-on="on"
                                               color="red"
                                               v-on:click.stop="deleteDialog = true"
                                               v-on:click="itemToDelete = props.item">
                                            <v-icon>delete</v-icon>
                                        </v-btn>
                                    </template>
                                    <strong>Xóa</strong>
                                </v-tooltip>
                            }

                        </td>
                        <td><span>{{ props.item.name }}</span></td>
                        <td><span>{{ formatNumber(props.item.hocPhi) }}</span></td>
                        <td><v-switch v-model="props.item.isDisabled" color="error" hide-details v-on:change="onToggle(props.item.hocPhiTronGoiId)"></v-switch></td>
                        <td>{{ props.item.fromDate }}</td>
                        <td>{{ props.item.toDate }}</td>
                        <td>{{ props.item.createdDate }}</td>
                        <td>{{ props.item.createdBy }}</td>
                        <td>{{ props.item.updatedDate }}</td>
                        <td>{{ props.item.updatedBy }}</td>
                    </template>
                    <v-alert slot="no-results" :value="true" color="error" icon="warning">
                        Không tìm thấy "{{ search }}".
                    </v-alert>
                </v-data-table>
            </v-card>
        </div>

        @*Edit Dialog*@
        <v-dialog v-model="dialogEdit" persistent max-width="600px">
            <v-card>
                <v-card-title>
                    <span class="headline">Cập Nhật Học Phí Trọn Gói của'{{ itemToEdit.name }}'</span>
                </v-card-title>
                <v-card-text>
                    <v-container grid-list-md>
                        <v-layout wrap>

                            <v-flex xs12>
                                <v-text-field label="Tên *" readonly v-model="itemToEdit.name"></v-text-field>
                                <v-text-field :rules='rules' prefix="VNĐ" label="Giá *" required v-model="itemToEdit.hocPhi" v-on:keyup.enter="onSave"></v-text-field>
                            </v-flex>
                            <v-flex xs12>
                                <v-menu v-model="isShowDatePicker3"
                                        :close-on-content-click="false"
                                        :nudge-right="40"
                                        lazy
                                        transition="scale-transition"
                                        offset-y
                                        full-width
                                        min-width="290px">
                                    <v-text-field slot="activator"
                                                  v-model="itemToEdit.fromDate"
                                                  label="Từ Ngày"
                                                  prepend-icon="event"
                                                  readonly></v-text-field>
                                    <v-date-picker locale="vi-vn" v-model="itemToEdit.fromDate" v-on:input="isShowDatePicker3 = false"></v-date-picker>
                            </v-flex>

                            <v-flex xs12>
                                <v-menu v-model="isShowDatePicker4"
                                        :close-on-content-click="false"
                                        :nudge-right="40"
                                        lazy
                                        transition="scale-transition"
                                        offset-y
                                        full-width
                                        min-width="290px">
                                    <v-text-field slot="activator"
                                                  v-model="itemToEdit.toDate"
                                                  label="Đến Ngày"
                                                  prepend-icon="event"
                                                  readonly></v-text-field>
                                    <v-date-picker locale="vi-vn" v-model="itemToEdit.toDate" v-on:input="isShowDatePicker4 = false"></v-date-picker>
                            </v-flex>

                            <v-flex xs12 sm3>
                                <v-select v-model="itemToEdit.lopHoc"
                                          :items="itemLopHoc"
                                          item-text="name"
                                          return-object
                                          chips
                                          label="Chọn Lớp Học">
                                    <template v-slot:selection="data">
                                        <v-chip :selected="data.selected"
                                                color="green"
                                                text-color="white">
                                            <span>{{ data.item.name }}</span>

                                        </v-chip>
                                    </template>
                                </v-select>
                            </v-flex>

                            <v-flex xs12 sm3>
                                <v-menu v-model="isShowDatePickerLopHoc3"
                                        :close-on-content-click="false"
                                        :nudge-right="40"
                                        lazy
                                        transition="scale-transition"
                                        offset-y
                                        full-width
                                        min-width="290px">
                                    <v-text-field slot="activator"
                                                  v-model="itemToEdit.fromDateLopHoc"
                                                  label="Từ Ngày"
                                                  prepend-icon="event"
                                                  readonly></v-text-field>
                                    <v-date-picker locale="vi-vn" v-model="itemToEdit.fromDateLopHoc" v-on:input="isShowDatePickerLopHoc3 = false"></v-date-picker>
                            </v-flex>
                            <v-flex xs12 sm3>
                                <v-menu v-model="isShowDatePickerLopHoc4"
                                        :close-on-content-click="false"
                                        :nudge-right="40"
                                        lazy
                                        transition="scale-transition"
                                        offset-y
                                        full-width
                                        min-width="290px">
                                    <v-text-field slot="activator"
                                                  v-model="itemToEdit.toDateLopHoc"
                                                  label="Đến Ngày"
                                                  prepend-icon="event"
                                                  readonly></v-text-field>
                                    <v-date-picker locale="vi-vn" v-model="itemToEdit.toDateLopHoc" v-on:input="isShowDatePickerLopHoc4 = false"></v-date-picker>
                            </v-flex>

                            <v-flex xs12 sm3>
                                <v-tooltip top>
                                    <template v-slot:activator="{ on }">
                                        <v-btn slot="activator" v-on="on" color="primary darken-1" small v-on:click="onAddLopHocEdit">Thêm</v-btn>
                                    </template>
                                    <strong>Thêm Lớp Học</strong>
                                </v-tooltip>
                            </v-flex>

                            <v-flex xs12 sm12>
                                <table class="table table-condensed table-hover table-bordered" style="border: 1px solid #ddd;">
                                    <thead style="background-color: orange;">
                                        <tr style="border: 1px solid #ddd;">
                                            <th style="border: 1px solid #ddd;text-align:center"> Lớp Học</th>
                                            <th style="border: 1px solid #ddd;text-align:center"> Từ Ngày</th>
                                            <th style="border: 1px solid #ddd;text-align:center"> Đến Ngày</th>
                                            <th style="border: 1px solid #ddd;text-align:center"> Xóa</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr style="border: 1px solid #ddd;" v-for="(item,i) in itemToEdit.lopHocList" :key="i">
                                            <td style="border: 1px solid #ddd; vertical-align: middle; padding-right:5px; padding-top: 0px; padding-bottom: 0px; text-align:center">{{ item.lopHoc.name }}</td>
                                            <td style="border: 1px solid #ddd; vertical-align: middle; padding-right:5px; padding-top: 0px; padding-bottom: 0px; text-align:center">{{ item.fromDate }}</td>
                                            <td style="border: 1px solid #ddd; vertical-align: middle; padding-right:5px; padding-top: 0px; padding-bottom: 0px; text-align:center">{{ item.toDate }}</td>
                                            <td style="border: 1px solid #ddd; vertical-align: middle; padding-right:5px; padding-top: 0px; padding-bottom: 0px; text-align:center">
                                                <v-tooltip top>
                                                    <template v-slot:activator="{ on }">
                                                        <v-btn slot="activator" v-on="on" color="error darken-1" fab small flat v-on:click="onXoaLopHocEdit(item)"><v-icon>delete</v-icon></v-btn>
                                                    </template>
                                                    <strong>Xóa Lớp Học</strong>
                                                </v-tooltip>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </v-flex>

                        </v-layout>
                    </v-container>
                    <small>* bắt buộc</small>
                    <v-alert v-model="alertEdit"
                             dismissible
                             color="warning"
                             icon="priority_high"
                             outline>
                        Không được bỏ trống
                    </v-alert>
                </v-card-text>
                <v-card-actions>
                    <v-spacer></v-spacer>
                    <v-btn color="secondary darken-1" flat v-on:click="dialogEdit = false">Đóng</v-btn>
                    <v-btn color="blue darken-1 white--text" v-on:click="onUpdate(itemToEdit)">Lưu</v-btn>
                </v-card-actions>
            </v-card>
        </v-dialog>

        @*DELETE DIALOG*@
        <v-dialog v-model="deleteDialog"
                  width="500">
            <v-card>
                <v-card-title class="headline error lighten-2 white--text"
                              primary-title>
                    Xác Nhận
                </v-card-title>

                <v-card-text>
                    Bạn có chắc xóa Học Phí của '{{ itemToDelete.name }}'?
                </v-card-text>

                <v-divider></v-divider>

                <v-card-actions>
                    <v-spacer></v-spacer>

                    <v-btn color="secondary"
                           flat
                           v-on:click="deleteDialog = false">
                        Đóng
                    </v-btn>

                    <v-btn color="error white--text"
                           v-on:click="onDelete(itemToDelete)">
                        Xóa
                    </v-btn>
                </v-card-actions>
            </v-card>
        </v-dialog>

        <v-snackbar v-model="snackbar"
                    :color="color"
                    :timeout="timeout"
                    top
                    right>
            {{ messageText }}
            <v-btn dark
                   flat
                   v-on:click="snackbar = false">
                Close
            </v-btn>
        </v-snackbar>
    </v-app>
</div>

<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="~/js/hocphitrongoiindex.min.js" type="text/javascript"></script>

