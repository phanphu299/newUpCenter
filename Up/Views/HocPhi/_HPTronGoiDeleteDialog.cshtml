<div v-if="deleteDialog">
    <v-dialog v-model="deleteDialog"
              width="500">
        <v-card>
            <v-card-title class="headline error lighten-2 white--text"
                          primary-title>
                Xác Nhận
            </v-card-title>

            <v-card-text>
                Bạn có chắc xóa Học Phí của '{{ itemToDelete.name }}'?
            </v-card-text>

            <v-divider></v-divider>

            <v-card-actions>
                <v-spacer></v-spacer>

                <v-btn color="secondary"
                       flat
                       v-on:click="deleteDialog = false">
                    Đóng
                </v-btn>

                <v-btn color="error white--text"
                       v-on:click="onDelete(itemToDelete)">
                    Xóa
                </v-btn>
            </v-card-actions>
        </v-card>
    </v-dialog>
</div>